---
import Link from '@components/Base/Link/Link.astro';
import { Icon } from 'astro-icon/components';

interface Props {
  href: string;
  title?: string;
  icon_name?: string;
}

const { href, title, icon_name = "mdi:arrow-left", ...attr } = Astro.props;
---

  <nav class="text-sm text-gray-500 dark:text-gray-400 mb-4 inline-flex items-center">
    <Link href={href} icon={{ name: icon_name, class: "inline-flex items-center" }} title={title} {...attr}>
      <slot>
    </Link>
  </nav>
---
import { twMerge } from "tailwind-merge";
const { ...attr } = Astro.props;

const defaultClasses = [
  "prose",
  "max-w-none",
  "prose-zinc",
  "prose-md",
  "lg:prose-lg",
  "dark:prose-invert",
  "prose-h1:font-bold",
  "prose-h1:text-5xl",
  "prose-h2:font-bold",
  "prose-h2:text-3xl",
  "prose-h3:font-bold",
  "prose-h3:text-2xl",
  "prose-a:text-blue-600",
  "prose-img:rounded-xl",
].join(" ");
---

<div class:list={twMerge([defaultClasses, attr.class])} {...attr}>
  <slot />
</div>

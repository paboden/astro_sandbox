---
import { twMerge } from "tailwind-merge";
let { ...attr } = Astro.props;

const defaultClasses = [
  "dark:prose-invert",
  "prose-h1:font-bold",
  "prose-h1:text-5xl",
  "prose-h2:font-bold",
  "prose-h2:text-3xl",
  "prose-h3:font-bold",
  "prose-h3:text-2xl",
  "prose-a:text-blue-600",
  "prose-img:rounded-xl",
].join(" ");
---

<div class:list={twMerge(["prose", defaultClasses, attr.class])} {...attr}>
  <slot />
</div>

---
import Header from "@components/Interface/Header/Header.astro";
import Footer from "@components/Interface/Footer/Footer.astro";

import "../styles/global.css";

const { ...attr } = Astro.props;

const hasHero = Astro.slots.has('hero');
const hasSidebar = Astro.slots.has('sidebar');
const hasSidebarAlt = Astro.slots.has('sidebar-alt');

const sidbarClass = hasSidebar ? 'with-sidebar flex flex-wrap gap-8' : null;
const sidbarClassAlt = hasSidebarAlt ? 'with-sidebar-alt flex flex-wrap gap-8' : null;

---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{Astro.props.title ?? "Astro Sandbox Site"}</title>
  </head>
  <body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen flex flex-col">
    <div id="top"></div>
    <Header />
    <div class="bg-white">
      {hasHero && (
        <div class="hero-content w-full mx-auto">
          <slot name="hero"/>
        </div>
      )}
      <div class:list={["content", sidbarClass, sidbarClassAlt, attr.class]} {...attr}>
        {hasSidebar && (
          <aside class="sidebar">
            <slot name="sidebar" />
          </aside>
        )}
        <main class="main-content">
          <slot />
        </main>
        {hasSidebarAlt && (
          <aside class="sidebar">
            <slot name="sidebar-alt" />
          </aside> 
        )}
      </div>
    </div>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0 auto;
    width: 100%;
    height: 100%;
    line-height: 1.6;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  }

  .content {
    padding-inline: 1rem;
  }

  .content.has-sidebar {
    display: flex;
  }

  .with-sidebar, .with-sidebar-alt {
    display: flex;
    flex-wrap: wrap;
  }

  .sidebar {
    flex-basis: 15rem;
    flex-grow: 1;
  }

  .with-sidebar.with-sidebar-alt .sidebar {
    flex-basis: 14rem;
  }

  .main-content {
    flex-basis: 0;
    flex-grow: 999;
  }
</style>

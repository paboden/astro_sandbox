---
import Header from "@components/Interface/Header/Header.astro";
import Footer from "@components/Interface/Footer/Footer.astro";

import "../styles/global.css";

const { ...attr } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{Astro.props.title ?? "Astro Sandbox Site"}</title>
  </head>
  <body>
    <Header />
    <div class:list={["content", attr.class]} {...attr}>
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0 auto;
    max-width: 160ch;
    width: 100%;
    height: 100%;
    line-height: 1.6;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  }

  .content {
    padding-inline: 1rem;
  }
</style>

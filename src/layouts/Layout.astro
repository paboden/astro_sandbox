---
import Header from "@components/Interface/Header/Header.astro";
import Footer from "@components/Interface/Footer/Footer.astro";

import "../styles/global.css";

const { ...attr } = Astro.props;
const hasSidebar = Astro.slots.has('sidebar');
const sidbarClass = hasSidebar ? 'with-sidebar flex flex-wrap gap-8' : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{Astro.props.title ?? "Astro Sandbox Site"}</title>
  </head>
  <body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen flex flex-col">

    <Header />

    <div class="bg-white">
      <div class:list={["content", sidbarClass, attr.class]} {...attr}>
        {hasSidebar ? (
          <div class="sidebar">
            <slot name="sidebar" />
          </div>
          <main class="main-content">
            <slot />
          </main>
        ) : (
          <main class="main-content">
            <slot />
          </main>
        )}
      </div>
    </div>

    <Footer />

  </body>
</html>

<style>
  html,
  body {
    margin: 0 auto;
    width: 100%;
    height: 100%;
    line-height: 1.6;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
      Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  }

  .content {
    padding-inline: 1rem;
  }

  .content.has-sidebar {
    display: flex;
  }

  .with-sidebar {
    display: flex;
    flex-wrap: wrap;
  }

  .sidebar {
    flex-basis: 18rem;
    flex-grow: 1;
  }

  .main-content {
    flex-basis: 0;
    flex-grow: 999;
  }
</style>

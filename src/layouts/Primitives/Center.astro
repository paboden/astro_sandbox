---
import { twMerge } from "tailwind-merge";

const { ...attr } = Astro.props;
---
<div 
  class:list={twMerge([
    "center",
    attr.class,
  ])}
  data-size="60ch"
  {...attr}
>
  <slot />
</div>

<style>

:root {
    --measure: attr(data-size, <length>, "60ch");
  }

  .center {
    box-sizing: content-box;
    margin-inline: auto;
    max-inline-size: var(--measure);
  }

</style>